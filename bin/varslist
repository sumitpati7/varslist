#!/usr/bin/env rails

require 'rubygems'
require 'varslist'
env_vars = Varslist.list_env_variables

if ARGV.empty?
    Varslist.print_used_var_list(env_vars)
    exit
end

if ARGV.include?('--file')
    Varslist.print_env(env_vars)
    exit
end

if ARGV.include?('--verify')
    Varslist.verify_var_list
    exit
end

if ARGV.include?('--help')
    Varslist.print_help
end
